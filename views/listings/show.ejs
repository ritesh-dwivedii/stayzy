<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-4 offset-4">
                <h3>Listing Details :</h3>
            </div>
            <div class="card col-4 offset-4">
                <img src="<%=listing.image.url %>" class="card-img-top show-img" alt="listing image">
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%= listing.title %>
                        </b>
                        <br>
                        <b>Description-</b><%= listing.description %>
                        <br>
                        <b>Price-</b>&#8377;<%=listing.price.toLocaleString('en-IN') %>/Night
                        <br>
                        <b>City-</b><%= listing.location %>
                        <br>
                        <b>Country-</b><%= listing.country%>
                    </p>
                </div>

            </div>
            <div class="btns col-4 offset-4 mb-3">
                <form action="/listings/<%= listing._id%>/edit" method="GET">
                    <button class="btn btn-dark  add-btn">Update</button>

                </form>
                <form action="/listings/<%= listing._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-dark">Delete</button>
                </form>
            </div>
        </div>

    </body>